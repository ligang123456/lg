<script>
import china from '../data/china.js'
import wepy from 'wepy'
export default class Korean extends wepy.page {
  config = {
    navigationBarTitleText: '韩式婚纱/wedding'
  }
  data = {
    notcollect: '../images/acollect.png',
    lacollect: false,
    acollect: false,
    china: []

  }
  methods = {
    collect(e) {
      let self = this
      let index = e.currentTarget.id
      self.china[index].acollect = !self.china[index].acollect
      // self.lacollect = '../images/收藏-选中.png'
      if (self.china[index].acollect) {
        self.china[index].c_number++
      } else {
        self.china[index].c_number--
      }
    },
    lagoods(e) {
      var item = e.currentTarget.dataset.index
      console.log(e, 'item')
      switch (item) {
        case 0 : wepy.navigateTo({
          url: '../pages/kla'
        }); break
        case 1 : wepy.navigateTo({
          url: '../pages/klb'
        }); break
      }
      let self = this
      const index = e.currentTarget.id
      wepy.navigateTo({
        url: `./kla?image=${china[index].c_pic}&title=${china[index].c_int}&price=${china[index].c_price}`
      })
      console.log(self.china[index], '111111')
    }
    // lagoods(e) {
    //   let self = this
    //   const index = e.currentTarget.id
    //   wepy.navigateTo({
    //     url: `./kla`
    //   })
    //   console.log(self.korean[index], '111111')
    // }
  }
  onLoad() {
    let self = this
    self.china = china
    console.log(self.korean, 'aaaaaaaaaa')
  }
}
</script>
