.container{display:flex;flex-direction:column;align-items:center;justify-content:center;padding:0;margin:0;background-color:teal}.buttom{display:flex;flex-direction:column;align-items:center;justify-content:center}.title{margin-top:20px;color:silver;text-shadow:3px 3px 3px black}.pic{width:220px;height:220px;border-radius:50%;margin-top:30px;border:25px solid rgba(255,255,255,0.3);filter:saturate(3.6);filter:hue-rotate(360deg);filter:drop-shadow(0 0 30px #00BFFF);box-shadow:0 5px 10px brown}.rotate-360{animation:rotate 10s linear infinite}.rotate-360-paused{animation:rotate 10s linear infinite;animation-play-state:paused}@keyframes rotate{0%{transform:rotate(0deg)}50%{transform:rotate(180deg)}100%{transform:rotate(360deg)}}.play{margin-bottom:0;padding:10px;display:flex;flex-direction:column;align-items:center;justify-content:center}.apic{width:35px;height:35px;margin-left:35px}.buttom{margin-top:60px;border:3px solid seashell;padding:0}.collect{width:33px;height:33px;margin-left:35px}.progress{width:80%;color:silver;margin-top:10px}audio{margin-top:10px;width:100%;display:flex;flex-direction:row;align-items:center;justify-content:center;padding:20px}.cycle{width:35px;height:35px}.forward,.backward{width:15px;height:15px;margin-left:35px;border:2px solid white;border-radius:50%;padding:8px}